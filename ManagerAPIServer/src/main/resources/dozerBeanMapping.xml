        <class-b>com.brightmarket.engine.acquisition.OrderSessionItemExtended</class-b>
        <field-exclude>
            <a>rules</a>
            <b>rules</b>
        </field-exclude>
        <field>
            <a>grossModeOption</a>
            <b>grossModeOption</b>
            <a-hint>com.fastspring.domain.price.GrossModeOption</a-hint>
            <b-hint>java.lang.String</b-hint>
