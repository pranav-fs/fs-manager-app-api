        <field>
            <a>withoutTaxNetPrice</a>
            <b>withoutTaxExtendedNetPrice</b>
        </field>
        <field>
            <a>withoutTaxDiscountAmount</a>
            <b>withoutTaxExtendedDiscountAmount</b>
        </field>
        <field>
            <a>taxes</a>
            <b>unitTaxes</b>
        </field>
        <field>
            <a>taxes</a>
            <b>extendedTaxes</b>
        </field>
